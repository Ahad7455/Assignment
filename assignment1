Q5:-
string = "I want to become a data scientist"
a=(string.count('a'))
e=(string.count('e'))
i=(string.count('i'))
o=(string.count('o'))
u=(string.count('u'))
print("a", a)
print('e=', e)
print('i=', i)
print('o=', o)
print('u=',u)

